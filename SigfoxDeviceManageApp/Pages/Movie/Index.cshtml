@page
@model SigfoxDeviceManageApp.Pages.Movie.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="uk-table uk-table-divider uk-table-small uk-table-expand">
    <caption></caption>
    <thead style="text-align:left">
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.MovieModel[0].Title)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.MovieModel[0].ReleaseDate)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.MovieModel[0].Genre)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.MovieModel[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="text-align:left">
@foreach (var item in Model.MovieModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
